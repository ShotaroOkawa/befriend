<%= form_with model:@article, local: true do |f| %>

<label>image</label>
<div><%= f.file_field :image %></div>
<label>title</label>
<div><%= f.text_field :title %></div>
<label>Category</label>
<div><%= f.collection_select(:category_id, Category.all, :id, :name, {}, {}) %></div>
<label>Country</label>
<div><%= f.collection_select(:country_id, Country.all, :id, :name, {}, {}) %></div>
<label>description</label>
<div><%= f.text_field :description %></div>
<div><%= f.submit "Post" %></div>

<% end %>