<%= form_with model:@event, local: true do |f| %>

<label>Image</label>
<div><%= f.file_field :image %></div>
<label>Title</label>
<div><%= f.text_field :title %></div>
<label>Category</label>
<div><%= f.collection_select(:category_id, Category.all, :id, :name, {}, {}) %></div>
<label>Country</label>
<div><%= f.collection_select(:country_id, Country.all, :id, :name, {}, {}) %></div>
<label>Date</label>
<div><%= f.datetime_select :date %></div>
<label>Place</label>
<div><%= f.text_field :place %></div>
<label>description</label>
<div><%= f.text_field :description %></div>
<input name="event[user_ids][]" type="hidden" value=<%= current_user.id %>>
<div><%= f.submit "Post" %></div>

<% end %>